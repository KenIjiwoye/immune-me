FROM node:22.16.0-alpine3.22

# Install development dependencies
WORKDIR /app

# Copy package files
COPY package.json package-lock.json ./

# Install all dependencies including dev dependencies
RUN npm ci --include=dev

# Copy the rest of the application
COPY . .

# Run database migration and seed data for cloud dev env. (Only run once if using free limited cloud services)
RUN node ace migration:run && node ace db:seed

# Expose the port
EXPOSE 3333

# Set development environment
ENV NODE_ENV=development

# Command to run the application in development mode with hot reloading
CMD ["node", "ace", "serve", "--watch"]