{
  "name": "role-management-tests",
  "version": "1.0.0",
  "description": "Comprehensive test suite for role management system",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:role-manager": "jest role-manager.test.js",
    "test:user-management": "jest user-management/",
    "test:integration": "jest --testPathPattern=user-management/",
    "test:unit": "jest --testPathPattern=role-manager.test.js",
    "test:security": "jest --testNamePattern='Security|Permission|Privilege'",
    "test:performance": "jest --testNamePattern='Performance|Cache|Concurrent'",
    "lint:tests": "eslint **/*.test.js **/*.spec.js",
    "validate:coverage": "jest --coverage --coverageThreshold='{\"global\":{\"branches\":80,\"functions\":80,\"lines\":80,\"statements\":80}}'",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand"
  },
  "keywords": [
    "appwrite",
    "role-management",
    "authentication",
    "authorization",
    "testing",
    "jest"
  ],
  "author": "Immune Me Development Team",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.22.0",
    "@babel/preset-env": "^7.22.0",
    "babel-jest": "^29.5.0",
    "eslint": "^8.42.0",
    "eslint-plugin-jest": "^27.2.0",
    "jest": "^29.5.0",
    "jest-junit": "^16.0.0",
    "jest-watch-typeahead": "^2.2.0"
  },
  "dependencies": {
    "node-appwrite": "^11.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": ["<rootDir>/setup.js"],
    "collectCoverageFrom": [
      "../utils/role-manager.js",
      "../utils/permissions.js",
      "../config/roles.js",
      "../functions/user-management/**/*.js",
      "!../functions/user-management/**/node_modules/**",
      "!**/*.test.js",
      "!**/*.spec.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ],
    "verbose": true,
    "clearMocks": true,
    "resetMocks": true,
    "restoreMocks": true
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "18"
          }
        }
      ]
    ]
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "jest": true,
      "es2022": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:jest/recommended"
    ],
    "plugins": ["jest"],
    "rules": {
      "jest/no-disabled-tests": "warn",
      "jest/no-focused-tests": "error",
      "jest/no-identical-title": "error",
      "jest/prefer-to-have-length": "warn",
      "jest/valid-expect": "error"
    }
  }
}