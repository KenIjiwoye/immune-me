# Appwrite Configuration
# ======================

# Appwrite Core Settings
APPWRITE_ENDPOINT=https://cloud.appwrite.io/v1
APPWRITE_PROJECT_ID=your-project-id-here
APPWRITE_API_KEY=your-api-key-here

# Development Environment
APPWRITE_DEV_PROJECT_ID=immune-me-dev
APPWRITE_DEV_API_KEY=your-dev-api-key-here
APPWRITE_DEV_ENDPOINT=https://cloud.appwrite.io/v1

# Production Environment
APPWRITE_PROD_PROJECT_ID=immune-me-production
APPWRITE_PROD_API_KEY=your-prod-api-key-here
APPWRITE_PROD_ENDPOINT=https://cloud.appwrite.io/v1

# Database Configuration
DATABASE_ID=main
DATABASE_NAME=ImmuneMeDatabase

# Authentication Settings
AUTH_DURATION=86400
AUTH_LIMIT=10
JWT_EXPIRY=3600
SESSION_LIMIT=10
PASSWORD_HISTORY=5
PASSWORD_MIN_LENGTH=8

# Security Configuration
APPWRITE_WEBHOOK_SECRET=your-webhook-secret-here
API_KEY_SCOPES=users.read,users.write,databases.read,databases.write,functions.execute,storage.read,storage.write

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@domain.com
SMTP_PASSWORD=your-app-password
SMTP_SECURE=true
SMTP_FROM_NAME=Immune Me System
SMTP_FROM_EMAIL=noreply@immuneme.app

# SMS Configuration (Optional)
SMS_PROVIDER=twilio
SMS_API_KEY=your-sms-api-key
SMS_FROM_NUMBER=+1234567890
SMS_ACCOUNT_SID=your-twilio-account-sid
SMS_AUTH_TOKEN=your-twilio-auth-token

# Push Notifications (Optional)
FCM_SERVER_KEY=your-fcm-server-key
APNS_KEY_ID=your-apns-key-id
APNS_TEAM_ID=your-apns-team-id
APNS_BUNDLE_ID=com.immuneme.app

# External Integrations
EXTERNAL_API_URL=https://api.external-system.com
EXTERNAL_API_KEY=your-external-api-key

# File Storage Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_EXTENSIONS=pdf,jpg,jpeg,png,doc,docx,xlsx,csv
STORAGE_ENCRYPTION=true
STORAGE_ANTIVIRUS=true

# Monitoring and Logging
LOG_LEVEL=info
SENTRY_DSN=your-sentry-dsn
ANALYTICS_API_KEY=your-analytics-key
ENABLE_AUDIT_LOGGING=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_DURATION=3600

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8081,https://immuneme.app
CORS_METHODS=GET,POST,PUT,DELETE,PATCH
CORS_HEADERS=Content-Type,Authorization,X-Appwrite-Project
CORS_CREDENTIALS=true

# Healthcare Specific Settings
FACILITY_DATA_ISOLATION=true
PATIENT_DATA_ENCRYPTION=true
HIPAA_COMPLIANCE_MODE=true
DATA_RETENTION_DAYS=2555

# Function Configuration
FUNCTION_TIMEOUT=30
FUNCTION_MEMORY=512
FUNCTION_RUNTIME=node-18.0

# Backup and Recovery
BACKUP_ENABLED=true
BACKUP_FREQUENCY=daily
BACKUP_RETENTION_DAYS=30

# Environment Specific
NODE_ENV=development
DEBUG=false