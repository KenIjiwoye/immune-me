# Appwrite Configuration
APPWRITE_ENDPOINT=https://cloud.appwrite.io/v1
APPWRITE_PROJECT_ID=your-project-id
APPWRITE_API_KEY=your-api-key
APPWRITE_DATABASE_ID=default
APPWRITE_STORAGE_BUCKET_ID=reports

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@immuneme.com

# Report Configuration
REPORT_SCHEDULE=0 9 * * 1  # Cron expression: Every Monday at 9 AM
REPORT_RECIPIENTS=admin@immuneme.com,manager@immuneme.com
REPORT_FORMATS=pdf,excel,csv
REPORT_RETENTION_DAYS=90

# Schedule Type
SCHEDULE_TYPE=weekly  # Options: weekly, monthly, quarterly

# Optional: Override specific settings
# DEBUG=true
# LOG_LEVEL=debug